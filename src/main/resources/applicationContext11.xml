<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

<context:annotation-config/>

    <bean id="carBean" class="com.dxc.auto.Car7">
        <constructor-arg name="type" value="MPV"/>
        <constructor-arg name="model" value="ToyotaInnova"/>
        <constructor-arg name="price" value="88000"/>
        <constructor-arg name="combinedFuelEconomy" value="16"/>
    </bean>

        <bean id="enginebean" class="com.dxc.auto.Engine7">
            <property name="horsePower" value="335"/>
            <property name="maxRPM" value="40000"/>
            <property name="displacement" value="3.0"/>
            <property name="cylinderConfig" value="I-6"/>
            <property name="recommendedFuel" value="premium unleaded"/>
        </bean>


</beans>